{
  "kismet": {
    "host": "127.0.0.1",
    "port": 2501,
    "use_ssl": false,
    "verify_ssl": true,
    "timeout": 30,
    "max_requests_per_minute": 60
  },
  "formatter": {
    "gps_precision": 6,
    "max_ssid_length": 32,
    "obfuscate_gps": false,
    "gps_obfuscation_precision": 3
  },
  "service": {
    "poll_interval": 5,
    "lookback_seconds": 60
  },
  "atak": {
    "host": "127.0.0.1",
    "port": 8087,
    "use_tls": true
  },
  "security": {
    "enable_rate_limiting": true,
    "max_devices_per_minute": 1000,
    "enable_gps_geofencing": false,
    "allowed_zones": []
  },
  "logging": {
    "level": "INFO",
    "log_file": "bridge_service.log",
    "max_log_size_mb": 100,
    "backup_count": 5
  }
}
